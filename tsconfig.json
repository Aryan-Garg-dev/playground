{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
     "rootDir": "./src",
     "moduleResolution": "node",
     "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  }
}
